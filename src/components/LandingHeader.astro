---
import imageLocal from '../assets/img/Logo 2 - sin fondo.png';
import { Image } from 'astro:assets';
---

<header class="py-4 px-4 sm:px-6 md:px-12 lg:px-20 flex items-center fixed top-0 w-full justify-between z-40 bg-gray-950 bg-opacity-50 backdrop-blur-lg animate-fade-in-top">

    <div class="flex items-center flex-grow basis-0">
        <a href="#home"><Image class="h-8 w-8 sm:h-10 sm:w-10" src={imageLocal} alt='Logo Astronix'/></a>
    </div>

    <nav class="hidden lg:flex flex-grow justify-center" id="navPrin">
        <ul class="flex text-sm">
            <li class="relative mx-2">
                <a href="#home" class="relative inline-block px-4 py-2 group">
                    Inicio
                    <span class="absolute bottom-0 left-0 block w-0 h-0.5 bg-white transition-all duration-500 ease-in-out group-hover:w-full"></span>
                </a>
            </li>
            <li class="relative mx-2">
                <a href="#about" class="relative inline-block px-4 py-2 group">
                    Sobre Nosotros
                    <span class="absolute bottom-0 left-0 block w-0 h-0.5 bg-white transition-all duration-500 ease-in-out group-hover:w-full"></span>
                </a>
            </li>
            <li class="relative mx-2">
                <a href="#services" class="relative inline-block px-4 py-2 group">
                    Servicios
                    <span class="absolute bottom-0 left-0 block w-0 h-0.5 bg-white transition-all duration-500 ease-in-out group-hover:w-full"></span>
                </a>
            </li>
            <li class="relative mx-2">
                <a href="#team" class="relative inline-block px-4 py-2 group">
                    Nuestro Equipo
                    <span class="absolute bottom-0 left-0 block w-0 h-0.5 bg-white transition-all duration-500 ease-in-out group-hover:w-full"></span>
                </a>
            </li>
            <li class="relative mx-2">
                <a href="#contact" class="relative inline-block px-4 py-2 group">
                    Contáctanos
                    <span class="absolute bottom-0 left-0 block w-0 h-0.5 bg-white transition-all duration-00 ease-in-out group-hover:w-full"></span>
                </a>
            </li>
        </ul>
    </nav>

    <nav class="hidden lg:flex flex-grow justify-end basis-0">
        <ul class="flex text-base [&>li>a]:inline-block [&>li>a]:px-2 [&>li>a]:py-2">
            <li><a href="#" target="_blank"><span class="icon-[mage--facebook-circle]"></span></a></li>
            <li><a href="#" target="_blank"><span class="icon-[mage--instagram-circle]"></span></a></li>
            <li><a href="#" target="_blank"><span class="icon-[mage--tiktok-circle]"></span></a></li>
        </ul>
    </nav>

    <div class="lg:hidden flex items-center">
        <div class="flex flex-grow px-4">
            <ul class="flex text-base [&>li>a]:inline-block [&>li>a]:px-2 [&>li>a]:py-2">
                <li><a href="https://www.instagram.com/astronix.com.pe/" target="_blank"><span class="icon-[mage--facebook-circle]"></span></a></li>
                <li><a href="https://www.instagram.com/astronix.com.pe/" target="_blank"><span class="icon-[mage--instagram-circle]"></span></a></li>
                <li><a href="https://www.instagram.com/astronix.com.pe/" target="_blank"><span class="icon-[mage--tiktok-circle]"></span></a></li>
            </ul>
        </div>
        <button id="menu-button">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
        </button>
    </div>

    <nav id="mobile-menu" class="lg:hidden absolute top-16 right-0 w-48 bg-black rounded-md hidden">
        <ul class="flex flex-col text-sm">
            <li><a href="#home" class="block px-4 py-2">Inicio</a></li>
            <li><a href="#about" class="block px-4 py-2">Sobre Nosotros</a></li>
            <li><a href="#services" class="block px-4 py-2">Servicios</a></li>
            <li><a href="#team" class="block px-4 py-2">Nuestro Equipo</a></li>
            <li><a href="#contact" class="block px-4 py-2">Contáctanos</a></li>
        </ul>
    </nav>

</header>

<script>
    document.getElementById('menu-button').addEventListener('click', () => {
      const menu = document.getElementById('mobile-menu');
      menu.classList.toggle('hidden');
    });
  
    document.querySelectorAll('#mobile-menu a').forEach(link => {
      link.addEventListener('click', () => {
        const menu = document.getElementById('mobile-menu');
        menu.classList.add('hidden');
      });
    });
  </script>  
