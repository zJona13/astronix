---
interface Props{
    title: string
    text: string
    link: string
    linkText: string
    gitText: string
}

const {title, text, link, linkText, gitText} = Astro.props
---

<div class="p-4 w-full md:w-1/3 flex flex-col text-center items-center">
    <div class="w-40 h-40 inline-flex items-center justify-center mb-5 flex-shrink-0 animate-fade-in-top">
      <img src={link} alt="dev" class="rounded-full">
    </div>
    <div class="flex-grow animate-fade-in-left">
      <h2 class="text-[20px] title-font font-semibold mb-3">{title}</h2>
      <p class="leading-relaxed text-base">{text}</p>
      <div class="mt-3 flex justify-center space-x-4">
        <a href={linkText} class="text-[20px]" target="_blank">
          <span class="icon-[entypo-social--linkedin-with-circle]"></span>
        </a>
        <a href={gitText} class="text-[20px]" target="_blank">
          <span class="icon-[pajamas--github]"></span>
        </a>
      </div>
    </div>
  </div>
  