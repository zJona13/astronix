---
interface Props{
    title: string
    text: string
    link: string
}

const {title, text, link} = Astro.props
---

<div class="p-4 md:w-1/3 flex flex-col text-center items-center">
    <div class="w-20 h-20 inline-flex items-center justify-center mb-5 flex-shrink-0 animate-fade-in-top">
        <img src={link} alt="servicios">
    </div>
    <div class="flex-grow animate-fade-in-left">
        <h2 class="text-3xl title-font font-semibold mb-3">{title}</h2>
        <p class="leading-relaxed text-base">{text}</p>
    </div>
</div>
